

if_modification(){
        stat "test_folder/" | grep "Modify"

}

#if_modification function is made to grab the modification time


if_modification > /home/rhel7/file3         #redirecting the modification time to a file for comaprision


get_modified_files(){
        find /home/rhel7/test_folder/ -type f  -mmin -30 -ls
}


f1="/home/rhel7/file2"
f2="/home/rhel7/file3"


if cmp -s "$f1" "$f2"; then  #comparing both the mentioned files for validation purposes
        :
else

        echo "some changes were made in:  "
        get_modified_files
        cp -fr $f2 $f1                #copying f2 text to f1.
fi

